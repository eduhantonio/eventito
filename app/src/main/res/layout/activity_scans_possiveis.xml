<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LinearLayout para armazenar os botões das tarefas -->
    <LinearLayout
        android:id="@+id/layoutTarefas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintBottom_toTopOf="@+id/btnRegistrarPresenca" />

    <!-- Botão fixo para registrar presença -->
    <Button
        android:id="@+id/btnRegistrarPresenca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Presença"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintLeft_toLeftOf="parent"
        android:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
