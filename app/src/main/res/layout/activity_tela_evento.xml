<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/banner_evento_tela"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDinamico1"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:orientation="vertical"
            android:padding="16dp">

        </LinearLayout>

        <Button
            android:id="@+id/buttonParticipar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gerarQrcode"
            android:text="Participar"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/creme"
            android:backgroundTint="@color/marrom"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>