<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:background="@color/bege_claro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Foto do Evento -->
        <ImageView
            android:id="@+id/evento_foto"
            android:layout_width="53dp"
            android:layout_height="65dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_celebration_24"
            android:contentDescription="Foto do evento" />

        <!-- Informações do Evento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Nome do Evento -->
            <TextView
                android:id="@+id/evento_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Evento"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/preto" />

            <!-- Descrição do Evento -->
            <TextView
                android:id="@+id/evento_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Descrição breve do evento."
                android:textSize="14sp"
                android:textColor="@color/marrom" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
