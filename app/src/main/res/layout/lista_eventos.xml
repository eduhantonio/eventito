<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:cardElevation="6dp"
    android:cardCornerRadius="16dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ícone ou Imagem -->
        <ImageView
            android:id="@+id/imgIconEvento"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_event"
            android:tint="@color/bege_escuro"
            android:scaleType="centerInside" />

        <!-- Conteúdo do evento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Evento"
                android:textColor="@color/preto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescricaoEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição breve do evento aparece aqui."
                android:textColor="@color/marrom"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
