<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/banner_login_eventito"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

    </LinearLayout>

    <!-- Campos de Entrada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@drawable/input_background"
        android:elevation="4dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="14dp"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="12dp"
            android:background="@drawable/input_background"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif"
            android:textColor="@color/preto"
            android:textColorHint="@color/bege_escuro" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:padding="14dp"
            android:drawableStart="@drawable/icon_senha"
            android:drawablePadding="12dp"
            android:background="@drawable/input_background"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/preto"
            android:textColorHint="@color/bege_escuro" />
    </LinearLayout>

    <!-- Botão de Login -->
    <Button
        android:id="@+id/btnLogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/bege_escuro"
        android:elevation="6dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="loginUsuario"
        android:padding="16dp"
        android:text="Logar"
        android:textColor="@color/creme"
        android:textStyle="bold" />

    <!-- Texto informativo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Ainda não faz parte do Eventito?"
        android:textAlignment="center"
        android:textColor="@color/marrom"
        android:textSize="16sp"
        android:letterSpacing="0.03"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Botão de Cadastro -->
    <Button
        android:id="@+id/btnCadastrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/marrom"
        android:elevation="6dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="irParaCadastro"
        android:padding="16dp"
        android:text="Cadastre-se!"
        android:textColor="@color/creme"
        android:textStyle="bold" />
</LinearLayout>
