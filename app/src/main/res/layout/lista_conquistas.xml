<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:background="@color/creme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ícone da conquista -->
        <ImageView
            android:id="@+id/conquista_icone"
            android:layout_width="53dp"
            android:layout_height="65dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/eventito_icon" />

        <!-- Informações da conquista -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Nome da Conquista -->
            <TextView
                android:id="@+id/conquista_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome da Conquista"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/preto" />

            <!-- Descrição da Conquista -->
            <TextView
                android:id="@+id/conquista_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Descrição da conquista"
                android:textSize="14sp"
                android:textColor="@color/preto" />

            <!-- Pontos Atuais / Pontos Totais -->
            <TextView
                android:id="@+id/conquista_pontos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pontos Atuais / Pontos Totais"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/marrom" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
